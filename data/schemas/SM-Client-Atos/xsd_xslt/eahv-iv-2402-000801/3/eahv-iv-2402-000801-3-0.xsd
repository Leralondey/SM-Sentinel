                    <xs:documentation xml:lang="it">Informazioni sull'assicurazione malattie (LAMal)</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="activityCH" type="eahv-iv-2402-common:employeeActivityCHForContinuedInsuranceType">
                <xs:annotation>
                    <xs:documentation xml:lang="de">Tätigkeit in der Schweiz</xs:documentation>
                    <xs:documentation xml:lang="fr">Activité en Suisse</xs:documentation>
                    <xs:documentation xml:lang="it">Attività in Svizzera</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="activityAbroad" type="eahv-iv-2402-common:employeeActivityAbroadForContinuedInsuranceType">
                <xs:annotation>
                    <xs:documentation xml:lang="de">Tätigkeit im Ausland</xs:documentation>
                    <xs:documentation xml:lang="fr">Activité à l'étranger</xs:documentation>
                    <xs:documentation xml:lang="it">Attività all'estero</xs:documentation>
                </xs:annotation>
            </xs:element>

            <xs:element name="employerRepresentative" type="eahv-iv-2402-common:companyAddressInformationStrictType"
                minOccurs="0">
                <xs:annotation>
                    <xs:documentation xml:lang="de">Vertretung Arbeitgeber</xs:documentation>
                    <xs:documentation xml:lang="fr">Représentation de l'employeur</xs:documentation>
                    <xs:documentation xml:lang="it">Rappresentanza del datore di lavoro</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="familyMembers" type="eahv-iv-2402-common:familyMembersType" minOccurs="0">
              <xs:annotation>
                  <xs:documentation xml:lang="de">Familienangehörige, welche den Versicherten begleiten</xs:documentation>
                  <xs:documentation xml:lang="fr">Membres de famille qui accompagnent l’assuré</xs:documentation>

              </xs:annotation>
            </xs:element>
            <xs:element name="notes" type="xs:string" minOccurs="0">
                <xs:annotation>
                    <xs:documentation xml:lang="de">Bemerkungen</xs:documentation>
                    <xs:documentation xml:lang="fr">Remarques</xs:documentation>
                    <xs:documentation xml:lang="it">Osservazioni</xs:documentation>
                </xs:annotation>

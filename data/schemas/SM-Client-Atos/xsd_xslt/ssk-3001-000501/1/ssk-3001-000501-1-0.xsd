<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:eCH-0007="http://www.ech.ch/xmlns/eCH-0007/3"
	xmlns:eCH-0058="http://www.ech.ch/xmlns/eCH-0058/2"
	xmlns:ssk-common="http://www.steuerkonferenz.ch/xmlns/ssk-common/1"
	xmlns:ssk-3001-000501="http://www.steuerkonferenz.ch/xmlns/ssk-3001-000501/1"
	targetNamespace="http://www.steuerkonferenz.ch/xmlns/ssk-3001-000501/1"
	elementFormDefault="qualified" attributeFormDefault="unqualified" version="0">
	<xs:annotation>
		<xs:documentation xml:lang="de">Wegzugsmeldung</xs:documentation>
	</xs:annotation>
	<xs:import namespace="http://www.ech.ch/xmlns/eCH-0007/3" />
	<xs:import namespace="http://www.ech.ch/xmlns/eCH-0058/2" />
	<xs:import namespace="http://www.steuerkonferenz.ch/xmlns/ssk-common/1" />
	
	<xs:complexType name="headerType">
		<xs:annotation>
			<xs:documentation xml:lang="de">
				Beschreibung des Message Headers. Abgeleitet von ssk-common:headerType
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="senderId" type="eCH-0058:participantIdType"/>
			<xs:element name="originalSenderId" type="eCH-0058:participantIdType" minOccurs="0"/>
			<xs:element name="declarationLocalReference" type="ssk-common:declarationLocalReferenceType" minOccurs="0"/>
			<xs:element name="recipientId" type="eCH-0058:participantIdType" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="messageId" type="eCH-0058:messageIdType"/>
			<xs:element name="referenceMessageId" type="eCH-0058:messageIdType" minOccurs="0" maxOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Darf nur bei Rektifikat gesetzt werden</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="ourBusinessReferenceID" type="eCH-0058:businessReferenceIdType" minOccurs="0"/>
			<xs:element name="yourBusinessReferenceId" type="eCH-0058:businessReferenceIdType" minOccurs="0" maxOccurs="0"/>
			<xs:element name="messageType" >
				<xs:simpleType>
					<xs:restriction base="eCH-0058:messageTypeType">
						<xs:enumeration value="3001"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="subMessageType">
				<xs:simpleType>
					<xs:restriction base="eCH-0058:subMessageTypeType">
						<xs:enumeration value="000501"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="sendingApplication" type="eCH-0058:sendingApplicationType"/>
			<xs:element name="subject" type="eCH-0058:subjectType"/>
			<xs:element name="object" type="ssk-common:naturalPersonsTaxType"/>
			<xs:element name="comment" type="eCH-0058:commentType" minOccurs="0"/>
			<xs:element name="messageDate" type="xs:dateTime"/>
			<xs:element name="initialMessageDate" type="eCH-0058:initialMessageDateType" minOccurs="0"/>
			<xs:element name="eventDate" type="xs:dateTime"/>
			<xs:element name="modificationDate" type="xs:dateTime" minOccurs="0" maxOccurs="0"/>
			<xs:element name="action">
				<xs:simpleType>
					<xs:restriction base="xs:string">
						<xs:maxLength value="2"/>
						<xs:enumeration value="1"/>
						<xs:enumeration value="3"/>
						<xs:enumeration value="4"/>
						<xs:enumeration value="7"/>
						<xs:enumeration value="10"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="attachment" type="ssk-3001-000501:attachmentType" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="testDeliveryFlag" type="eCH-0058:testDeliveryFlagType"/>
			<xs:element name="testData" type="xs:anyType" minOccurs="0"/>
			<xs:element name="extension" type="xs:anyType" minOccurs="0"/>
			<xs:element name="messagePriority" type="ssk-common:messagePriorityType" minOccurs="0" maxOccurs="0"/>
			<xs:element name="eventPeriod" type="xs:gYear" minOccurs="0" maxOccurs="0"/>
		</xs:sequence>
	</xs:complexType>
		
	<xs:complexType name="contentType">
		<xs:annotation>
			<xs:documentation xml:lang="de">Fachliche Attribute der Nachricht</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="taxpayer" type="ssk-common:extendedNaturalPersonsTaxType">
				<xs:annotation>
					<xs:documentation xml:lang="de">Steuerpflichtiger</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="taxpayerWife" type="ssk-common:extendedNaturalPersonsTaxType" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Partner/in Steuerpflichtiger</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="removalDate" type="xs:date">
				<xs:annotation>
					<xs:documentation xml:lang="de">Wegzugsdatum</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="taxationState" type="ssk-3001-000501:taxationStateType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Veranlagungsstatus</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="stateMunicipalityEarningTax" type="ssk-common:taxableAmountType" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Staats- &amp; Gemeindesteuern, Einkommen steuerbar</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="stateMunicipalityAssetTax" type="ssk-common:taxableAmountType" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Staats- &amp; Gemeindesteuern, Vermögen steuerbar</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="stateMunicipalityScaleTax" type="ssk-3001-000501:scaleTaxType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Tarif Staats- &amp; Gemeindesteuern</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="stateMunicipalityDate" type="xs:date" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Staats- &amp; Gemeindesteuern Steuerpflicht bis</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="federalEarningTax" type="ssk-common:taxableAmountType" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Direkte Bundessteuern, Einkommen steuerbar</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="federalAssetTax" type="ssk-common:taxableAmountType" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Direkte Bundessteuern, Vermögen steuerbar</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="federalScaleTax" type="ssk-3001-000501:scaleTaxType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Tarif Direkte Bundessteuern</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="federalMunicipalityDate" type="xs:date" minOccurs="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Direkte Bundessteuern Steuerpflicht bis</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="interkantonal" type="ssk-3001-000501:yesNoType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Ausscheidung interkantonal</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="international" type="ssk-3001-000501:yesNoType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Ausscheidung international</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="localRealEstate" type="ssk-3001-000501:yesNoType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Liegenschaft in der Wegzugsgemeinde</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="localBusiness" type="ssk-3001-000501:yesNoType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Geschäft in der Wegzugsgemeinde</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="localPartnership" type="ssk-3001-000501:yesNoType" minOccurs="0">
				<xs:annotation>
					<xs:documentation>Kollektiv- oder Kommanditgesellschaft in der Wegzugsgemeinde</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<xs:simpleType name="taxationStateType">
		<xs:restriction base="xs:integer">
			<xs:enumeration value="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Vorläufig</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="1">
				<xs:annotation>
					<xs:documentation xml:lang="de">Definitiv</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="scaleTaxType">
		<xs:restriction base="xs:integer">
			<xs:enumeration value="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Grundtarif</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="1">
				<xs:annotation>
					<xs:documentation xml:lang="de">Verheiratet</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="yesNoType">
		<xs:restriction base="xs:integer">
			<xs:enumeration value="0">
				<xs:annotation>
					<xs:documentation xml:lang="de">Nein</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="1">
				<xs:annotation>
					<xs:documentation xml:lang="de">Ja</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
				
	<xs:complexType name="attachmentType">
		<xs:annotation>
			<xs:documentation xml:lang="de">
				Hilfstyp zur Beschreibung von Message Attachments. Abgeleitet von ssk-common:attachmentType
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="title" type="ssk-common:attachmentTitleType"/>
			<xs:element name="documentDate" type="ssk-common:documentDateType" minOccurs="0"/>
			<xs:element name="leadingDocument" type="ssk-common:leadingDocumentType"/>
			<xs:element name="sortOrder" type="ssk-common:sortOrderType"/>
			<xs:element name="documentFormat">
				<xs:simpleType>
					<xs:restriction base="ssk-common:documentFormatType">
						<xs:enumeration value="application/pdf"/>
						<xs:enumeration value="image/tiff"/>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="documentType" type="xs:anyType" minOccurs="0"/>
			<xs:element name="file" type="ssk-common:attachmentFileType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:element name="header">
		<xs:annotation>
			<xs:documentation xml:lang="de">Deklaration des Root-Elements für header.xml</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:complexContent>
				<xs:extension base="ssk-3001-000501:headerType">
					<xs:attribute name="minorVersion" type="xs:integer" use="required"></xs:attribute>
				</xs:extension>
			</xs:complexContent>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="message">
		<xs:annotation>
			<xs:documentation xml:lang="de">Deklaration des Root-Elements für message.xml</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="header" type="ssk-3001-000501:headerType"/>
				<xs:element name="content" type="ssk-3001-000501:contentType"/>
			</xs:sequence>
			<xs:attribute name="minorVersion" type="xs:integer" use="required"></xs:attribute>
		</xs:complexType>
	</xs:element>
</xs:schema>
